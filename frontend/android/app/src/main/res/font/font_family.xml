<?xml version="1.0" encoding="utf-8"?>
<font-family
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Medium font -->
    <font
        android:font="@font/gmarket_sans_ttf_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/gmarket_sans_ttf_medium"
        app:fontStyle="normal"
        app:fontWeight="500"/>

    <!-- Bold font -->
    <font
        android:font="@font/gmarket_sans_ttf_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/gmarket_sans_ttf_bold"
        app:fontStyle="normal"
        app:fontWeight="700"/>

    <!-- Light font -->
    <font
        android:font="@font/gmarket_sans_ttf_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/gmarket_sans_ttf_light"
        app:fontStyle="normal"
        app:fontWeight="300"/>

</font-family>
